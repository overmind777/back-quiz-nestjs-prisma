generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Quiz {
  id        Int        @id @default(autoincrement())
  title     String
  category  String
  questions Question[]
  owner     String
  rating    Int?
  finished  Int?
  ratingQuantity Int?
  ageGroup  String
  background String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Question {
  id      Int    @id @unique @default(autoincrement())
  text    String
  Quiz    Quiz?  @relation(fields: [quizId], references: [id])
  quizId  Int?
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String?
}

